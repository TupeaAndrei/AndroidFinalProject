<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_drawable">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_doctor"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"/>

    <Button
        android:id="@+id/select_doctor_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/select_doctor_login"
        android:text="@string/register"
        android:backgroundTint="@color/dark_red"
        />

    <Button
        android:id="@+id/select_doctor_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/select_doctor_register"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/login"
        android:backgroundTint="@color/faded_orange"
        />
</androidx.constraintlayout.widget.ConstraintLayout>