<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/medium_padding"
    android:background="@color/red">

    <TextView
        android:id="@+id/tablet_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Name"
        android:layout_marginTop="@dimen/small_padding_dimen"
        android:textSize="@dimen/name_default_size"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tablet_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tablet_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/small_padding_dimen"
        android:textSize="@dimen/default_email_dimension"
        />

    <TextView
        android:id="@+id/tablet_indications_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tablet_description_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Indications"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/small_padding_dimen"
        android:textSize="@dimen/default_email_dimension"
        />

</androidx.constraintlayout.widget.ConstraintLayout>