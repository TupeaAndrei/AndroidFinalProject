<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/medium_padding"
    android:background="@color/teal_700">

    <ImageView
        android:id="@+id/advice_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/advice_logo"
        app:layout_constraintDimensionRatio="W,1:1"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:maxWidth="500dp"
        android:maxHeight="500dp"
        />

    <TextView
        android:id="@+id/doctor_advice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/advice_logo_image"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="7"
        android:ellipsize="end"
        android:textSize="@dimen/default_email_dimension"
        android:layout_marginTop="@dimen/medium_padding"
        tools:text="Doctor's advice is here"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>