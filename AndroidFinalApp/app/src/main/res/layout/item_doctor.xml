<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/doctor_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Name"
        android:textSize="@dimen/name_default_size"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/doctor_email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doctor_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_padding_dimen"
        tools:text="Email"
        android:textSize="@dimen/default_email_dimension"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/doctor_age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doctor_email_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/age"
        android:textSize="@dimen/default_email_dimension"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/small_padding_dimen"
        />

    <TextView
        android:id="@+id/doctor_age_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doctor_email_text_view"
        app:layout_constraintStart_toEndOf="@id/doctor_age_text_view"
        tools:text="20"
        android:layout_marginTop="@dimen/small_padding_dimen"
        android:textSize="@dimen/default_email_dimension"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <ImageView
        android:id="@+id/subscribe_doctor_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/subscribe"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/doctor_spec_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doctor_age_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/medium_padding"
        tools:text="This is the best specialization any doctor would want to take part in."
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="@dimen/default_email_dimension"
        />

</androidx.constraintlayout.widget.ConstraintLayout>